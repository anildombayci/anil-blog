    <section class="hero is-success is-fullheight">
        <div class="hero-body">
            <div class="container has-text-centered">
                <div class="column is-4 is-offset-4">
                    <h3 class="title">Giriş Yap</h3>
                    <hr class="login-hr">
                    <p class="subtitle">Lütfen Giriş Yapınız!</p>
                    <div class="box">
                        <form action="/login" method="post">
                            <div class="field">
                                <div class="control">
                                    <input class="input is-large" id="username" name="username" type="text" placeholder="kullanıcı adınız">
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <input class="input is-large" id="password" name="password" type="password" placeholder="şifreniz">
                                </div>
                            </div>
                            <div class="field">
                            </div>
                            <button type="submit" class="button is-block is-info is-large is-fullwidth">Giriş Yap <i class="fa fa-sign-in" aria-hidden="true"></i></button>
                          <br>
                          <br>
                    <p class="has-text-grey">
                        Kayıtlı değil misin? <a href="/register">Kayıt ol</a>!
                    </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
